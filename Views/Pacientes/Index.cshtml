@model List<PacientesModel>

@{
    ViewData["Title"] = "Cadastro de Pacietes";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Pacientes" asp-action="Criar">Adicionar novo paciente</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
        
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            This is a danger alert—check it out!
            <button type="button" class="btn btn-danger btn-sm close-alert" arial="Close">X</button>
            @TempData["MensagemErro"]
        </div>

    }
    <br />

    <h1 class="display-4"> Lista de Pacientes</h1>

    <table class="table" id="table-pacientes">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th scope="col">Data de Nascimento</th>
                <th scope="col">Sexo</th>
                <th scope="col">Telefone</th>
                <th scope="col">E-mail</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
          
           @if(Model !=null && Model.Any())
            {
                foreach(PacientesModel pacientes in Model)
                {
                    <tr>
                        <th scope="row">@pacientes.Id</th>
                        <td>@pacientes.Nome</td>
                        <td>@pacientes.Cpf</td>
                        <td>@pacientes.DataDeNascimento</td>
                        <td>@pacientes.Sexo</td>
                        <td>@pacientes.Telefone</td>
                        <td>@pacientes.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary display flex" asp-route-id="@pacientes.Id" asp-controller="Pacientes" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@pacientes.Id" asp-controller="Pacientes" asp-action="ApagarConfirmacao">Apagar</a>

                            </div>
                        </td>
                    </tr>
                    

                }
            }
        </tbody>
    </table>
</div>
