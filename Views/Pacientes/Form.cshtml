@model PacientesModel




<div class="row">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do paciente" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group col-3">
        <label for="cpf">Cpf</label>
        <input type="text" id="Cpf" asp-for="Cpf" class="form-control" placeholder="Informe o cpf do paciente" />
        @Html.ValidationMessageFor(x => x.Cpf)

    </div>
    <div class="form-group col-3">
        <label for="data">Data de Nascimento</label>
        <input type="date" asp-for="DataDeNascimento" class="form-control" placeholder="Data de nascimento" />
        @Html.ValidationMessageFor(x => x.DataDeNascimento)
    </div>
    <div class="form-group col-3">
        <label for="sexo">Sexo</label>
        <select asp-for="Sexo" class="form-control">
            <option selected disabled hidden>Sexo do Paciente</option>
            <option value="M">Masculino</option>
            <option value="F">Feminino</option>
            <option value="O">Outros</option>
        </select>
        @Html.ValidationMessageFor(x => x.Sexo)
    </div>

    <div class="form-group col-3">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Numero do paciente" />
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="E-mail do paciente" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    

</div>